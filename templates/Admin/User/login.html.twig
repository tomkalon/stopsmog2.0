{% extends 'Admin/base.html.twig' %}
{% block title %}{{ app_name }} - {{ 'ui.user.login.label'|trans }}{% endblock %}

{% block body %}
    <main id="app-login" class="container mt-5 m-auto d-flex justify-content-center">
        <form action="{{ path('app_login') }}" class="space-y-6 flex-grow-1" method="post">
            {% if error %}
                <div class="alert alert-danger d-flex align-items-center justify-content-center" role="alert">
                    <svg class="fill-current" style="width: 20px; height: 20px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                        <path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/>
                    </svg>
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
            {% endif %}
            <h1 class="h3 mb-3 fw-normal">{{ 'ui.user.login.label'|trans }}</h1>

            <div class="form-floating my-2">
                <input id="username"
                       name="_username"
                       type="text"
                       autocomplete="text"
                       value="{{ last_username }}"
                       required
                       class="form-control">
                <label for="username">{{ 'ui.user.email'|trans }}</label>

            </div>
            <div class="form-floating my-2">
                <input id="password"
                       name="_password"
                       type="password"
                       autocomplete="current-password"
                       required
                       class="form-control">
                <label for="password">{{ 'ui.user.password'|trans }}</label>
            </div>
            <div class="d-flex mt-2 mb-4">
                <input type="checkbox"
                       class="form-check-input"
                       name="_remember_me"
                       id="remember-me"
                       checked/>
                <label class="ms-2 form-check-label" for="remember-me">{{ 'ui.user.remember_me'|trans }}</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-secondary w-100 py-2"
                    type="submit">{{ 'ui.user.login.login'|trans }}
            </button>
        </form>
    </main>

{% endblock %}
