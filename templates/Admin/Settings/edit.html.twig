{% extends 'Admin/base.html.twig' %}
{% block title %}{{ app_name }} - {{ 'ui.settings.label'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="d-flex gap-4">
            <h1>{{ 'ui.settings.label'|trans }}</h1>
        </div>
        <hr>
        <div class="row">
            <div class="col-6">
                {{ form_start(form) }}
                <div>
                    {{ form_label(form.map_image) }}
                    {{ form_widget(form.map_image) }}
                </div>
                <div class="mt-3">
                    {{ form_label(form.submit) }}
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-6">
                {% if settings.mapImage %}
                    <img src="" alt="" class="settings-map-image-thumb">
                {% else %}
                    <img src="{{ asset('build/images/no-image.webp') }}" class="settings-map-image-thumb" alt="no image">
                {% endif %}
            </div>
        </div>
        <hr>
    </div>
{% endblock %}
