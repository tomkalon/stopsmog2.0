<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">{{ 'ui.frontpage.activity'|trans }}</th>
        <th scope="col">{{ 'ui.frontpage.city'|trans }}</th>
        <th scope="col">{{ 'ui.frontpage.place'|trans }}</th>
        <th scope="col" class="text-center">{{ 'ui.frontpage.pm10'|trans }}</th>
        <th scope="col" class="text-center">{{ 'ui.frontpage.reading_time'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for sensor in sensorList %}
        <tr>
            <td>
                {% if sensor.measurements[0].createdAt|date('Y-m-d H:i:s') < "now"|date_modify("-3 hour")|date("Y-m-d H:i:s", "Europe/Warsaw") %}
                    <img src="{{ asset('build/images/active.svg') }}" height="15" alt="Active">
                {% else %}
                    <img src="{{ asset('build/images/inactive.svg') }}" height="15" alt="Inactive">
                {% endif %}

            </td>
            <td>{{ sensor.city.name }}</td>
            <td>{{ sensor.name }}</td>
            <td class="fw-bolder justify-content-center d-flex align-items-center gap-1">
                {% include 'Main/FrontPage/__measurement_pm10value_color.html.twig' %}
                {{ sensor.measurements[0].pm10 }} <small class="fw-normal text-xs">Âµg/m<sup>3</sup></small>
            </td>
            <td class="text-center">{{ sensor.measurements[0].createdAt|date('Y-m-d - H:i:s') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
